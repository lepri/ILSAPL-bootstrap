  <tr style="height:70">
     <td class="center" class="form-text"><input type="text" name="txt_des_cargo" value="<dtml-var des_cargo missing>" size="40" />
         <input type="checkbox" name="chk_ind_unico" />&nbsp;Cargo Único
     <br /><br /> <input type="button" class="btn btn-primary" name="btn_cargo_comissao_incluir" value="Incluir Cargo"
